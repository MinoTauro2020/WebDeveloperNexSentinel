# ZAI Web Dev SDK API Key (for AI-powered security analysis)
ZAI_API_KEY=your_zai_api_key_here

# Database URL (PostgreSQL, MySQL, etc.)
DATABASE_URL=postgresql://user:password@localhost:5432/nexsentinel

# NextAuth Secret (for authentication)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Email notifications (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=security@nex-sentinel.com
SMTP_PASSWORD=your_smtp_password

# Alert notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL
